<p id="notice"><%= notice %></p>

<div class="ShadowBoxBoats">
<center><h1 class= "section-heading" style="color:green;font-size:300%;font-family:'Contrail One',cursive; box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.12);">Boats</h1></center>

<div class="section_heading">
  <table id="boat_style">
    <thead>
      <tr>
  
        <th>Name</th>
        <th>Size</th>
        <th>Max load</th>
        <th>Image url</th>
        <th>Assign jobs</th>
  
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @boats.each do |boat| %>
        <tr>
          <td><%= boat.name %></td>
          <td><%= boat.size %></td>
          <td><%= boat.max_load %></td>
          <td><%= image_tag boat.photo.url (:medium)%></td>
          <td><%= boat.assign_jobs %></td>  

          <td><%= link_to 'Show', boat %></td>  

          <td><%= link_to 'Edit', edit_boat_path(boat) %></td>  

          <td><%= link_to 'Destroy', boat, method: :delete, data: { confirm: 'Are you sure?' } %></td>  

        </tr>
      <% end %>
    </tbody>
  </table>



  <%= link_to new_boat_path do %>
    <button id="newBoatbutton" class="btn btn-primary btn-xl text-uppercase" type="submit">New Boat</button>

  <% end %>
</div>
</div>