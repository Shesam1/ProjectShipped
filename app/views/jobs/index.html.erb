

<p id="notice"><%= notice %></p>

<div class="ShadowBox">

  <center><h1 class= "section-heading" style="color:green;font-size:300%;font-family:'Contrail One',cursive; box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.12);">Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Boat</th>
      <th>Status</th>
      <th>Load amount</th>
      <th>Sender</th>
      <th>Buyer</th>
      <th>Cost</th>
      <th>Origin</th>
      <th>Destination</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.boat_id %></td>
        <td><%= job.status %></td>
        <td><%= job.load_amount %></td>
        <td><%= job.sender_id %></td>
        <td><%= job.buyer_id %></td>
        <td><%= job.cost %></td>
        <td><%= job.origin %></td>
        <td><%= job.destination %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path, class: "btn btn-primary btn-xl text-uppercase", style: "color:white" %>

</center>
</div>

